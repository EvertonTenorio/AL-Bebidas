<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Login</th>
      <th>Senha</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.senha %></td>
        <td><%= usuario.cargo %></td>
        <td><%= link_to 'Vizualizar', usuario, id: "v-#{usuario.cpf}"%></td>
        <td><%= link_to 'Alterar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Remover', usuario, method: :delete, id:"r-#{usuario.cpf}"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Usuario', new_usuario_path %>
